---
import Card from '@components/Card.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Me" sideBarActiveItemId="contact">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Contact Me ✉️</div>
  </div>

  <p class="pb-5">
    Feel free to to me if you're interested in collaboration or think I seem cool to work with!
  </p>

  <p class="text-3xl pb-2">Where to find me</p>
  <div class="flex flex-col md:flex-row justify-evenly">
    <Card
      title="Github"
      centreTitle={true}
      img="/images/github-mark.svg"
      imgFormat="svg"
      imgEager={true}
      classList={['size-52']}
      url="https://github.com/acefire6"
    />

    <Card
      title="LinkedIn"
      centreTitle={true}
      img="/images/linkedin-logo.webp"
      imgFormat="webp"
      imgEager={true}
      classList={['size-52']}
      url="https://linkedin.com/in/jethro-muller/"
    />

    <Card
      title="Email"
      centreTitle={true}
      img="/images/gmail-logo.webp"
      imgFormat="webp"
      imgEager={true}
      classList={['size-52']}
      url="mailto:contact@jethromuller.com"
    />
  </div>
</BaseLayout>
